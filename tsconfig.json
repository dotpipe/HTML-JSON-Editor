{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "public/src"
  },
  "include": ["public/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}